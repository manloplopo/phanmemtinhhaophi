@model IEnumerable<phanmemtinhhaophi.Models.Dinhmuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Định Mức</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Macongviec)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mavattu)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soluong)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Macongviec)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mavattu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluong)
        </td>
        <td>
           
            @Html.ActionLink("Delete", "Delete", new {  id=item.Macongviec/@item.Mavattu  })
        </td>
    </tr>
}

</table>
